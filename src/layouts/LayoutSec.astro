---
// Imports optimizados - solo lo esencial al inicio
import '../styles/global.css';
---

<!doctype html>
<html lang="en" class="overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Preconnect para DNS lookup temprano -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Preconnect para widget de chat - optimizaciÃ³n de terceros -->
    <link rel="preconnect" href="https://widgets.leadconnectorhq.com" />
    <link rel="dns-prefetch" href="https://widgets.leadconnectorhq.com" />
    <!-- Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <meta name="generator" content={Astro.generator} />
    <title>Arcos Remodeling - Quality home improvements you can trust</title>
    <meta
      name="description"
      content="Arcos Remodeling provides top-quality home improvement services, ensuring your home looks its best."
    />
    <!-- SEO additions -->
    <meta
      name="keywords"
      content="Arcos Remodeling, home improvement, quality service, trusted contractors, remodeling"
    />
    <meta name="author" content="Arcos Remodeling" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://arcosremodelingservices.com/" />
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Arcos Remodeling - Quality home improvements you can trust"
    />
    <meta
      property="og:description"
      content="Arcos Remodeling provides top-quality home improvement services, ensuring your home looks its best."
    />
    <meta property="og:url" content="https://arcosremodelingservices.com/" />
    <meta property="og:image" content="/images/hero/fondo.png" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@ArcosRemodeling" />
    <meta
      name="twitter:title"
      content="Arcos Remodeling - Quality home improvements you can trust"
    />
    <meta
      name="twitter:description"
      content="Arcos Remodeling provides top-quality home improvement services, ensuring your home looks its best."
    />
    <meta name="twitter:image" content="/images/hero/fondo.png" />

    <!-- JSON-LD Organization -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Arcos Remodeling",
        "url": "https://arcosremodelingservices.com/",
        "logo": "https://arcosremodelingservices.com/favicon.svg"
      }
    </script>
  </head>
  <body
    class="font-family antialiased overflow-x-hidden bg-back flex flex-col justify-center items-center w-screen"
  >
    <main class="flex flex-col w-full items-center h-full">
      <slot />
    </main>
  </body>
</html>

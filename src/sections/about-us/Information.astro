---
type Translations = typeof import('../../i18n/es').default;
type HeroContent = Translations['about-us']['info'];
interface Props {
  content: HeroContent;
}
const { content } = Astro.props as Props;
---

<section
  class="w-full max-w-screen xl:max-w-7xl px-5 xl:px-0 flex flex-col md:flex-row justify-center items-start gap-12 md:gap-20 xl:gap-30 pt-14 md:pt-30"
>
  <div class="flex flex-col justify-center items-center gap-8 md:gap-10">
    <div class="flex flex-col justify-center items-start gap-6">
      <h2 class="text-primary font-title text-[48px] font-bold leading-[116%]">
        {content.title}
      </h2>
      <p class="text-[#2C2C2C] text-[16px] font-normal leading-[150%]">
        {content.description}
      </p>
    </div>
    <img
      src="/images/logo-3.svg"
      alt="Logo de Arcos Remodeling"
      width="224"
      height="70.5"
      class="w-full md:w-[90%] lg:w-[70%] h-auto"
    />
  </div>
  <div class="flex flex-col justify-center items-center gap-12">
    {
      content.items.map((item, index) => (
        <>
          <div class="flex justify-start items-start gap-6">
            <div class="bg-secondary flex justify-center items-center w-17.75 h-17.75">
              <img
                src={`/images/${item.icon}.svg`}
                alt={item.title}
                width="36"
                height="36"
                class="w-9 h-9"
              />
            </div>
            <div class="flex justify-start items-start flex-col gap-4 flex-1 min-w-0">
              <h3 class="text-primary text-[24px] font-semibold leading-[120%]">
                {item.title}
              </h3>
              <p class="text-primary text-[16px] font-normal leading-[150%]">
                {item.description}
              </p>
            </div>
          </div>
          {index !== content.items.length - 1 ? (
            <hr class="w-full h-px bg-black opacity-10" />
          ) : null}
        </>
      ))
    }
  </div>
</section>
